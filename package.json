{
  "name": "leo",
  "version": "1.2.3",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "xo",
    "precommit": "lint-staged"
  },
  "license": "MIT",
  "repository": "leo/site",
  "xo": {
    "extends": [
      "prettier",
      "prettier/react",
      "plugin:react/recommended"
    ],
    "env": [
      "browser",
      "node"
    ],
    "rules": {
      "react/react-in-jsx-scope": 0,
      "import/named": 0,
      "react/prop-types": 0,
      "react/display-name": 0
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run test",
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "now": {
    "alias": "leo.im"
  },
  "dependencies": {
    "is-absolute-url": "2.1.0",
    "moment": "2.17.1",
    "next": "2.0.1",
    "nprogress": "0.2.0",
    "react": "15.4.2",
    "react-codepen": "0.1.0",
    "react-dom": "15.4.2",
    "react-syntax-highlighter": "5.0.0",
    "react-tweet-embed": "1.0.3",
    "to-id": "1.0.5"
  },
  "devDependencies": {
    "eslint-config-prettier": "1.5.0",
    "eslint-plugin-react": "6.10.0",
    "husky": "0.13.2",
    "lint-staged": "3.4.0",
    "prettier": "0.22.0",
    "xo": "0.17.1"
  }
}
